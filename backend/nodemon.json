{
  "watch": [
    "*.js",
    "routes/*.js",
    "middleware/*.js",
    "models/*.js",
    "config/*.js"
  ],
  "ignore": ["tests/*", "node_modules/*", "coverage/*", "*.test.js"],
  "delay": "1000",
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "verbose": true,
  "execMap": {
    "js": "node"
  }
}
