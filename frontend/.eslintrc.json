{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["react-app", "react-app/jest"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "testing-library/no-wait-for-multiple-assertions": "off",
    "import/first": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    "build/",
    "coverage/",
    "*.config.js",
    "*.config.ts"
  ]
}
